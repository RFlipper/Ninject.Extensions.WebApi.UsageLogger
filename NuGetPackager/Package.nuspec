<?xml version="1.0"?>
<package >
  <metadata>
    <id>Ninject.Extensions.WebApi.UsageLogger</id>
    <version>1.0.0</version>
    <authors>Ove Andersen</authors>
    <owners>EyeCatch</owners>
    <projectUrl>http://www.eyecatch.no/projects/ninject-webapi-usage-logger/</projectUrl>
    <iconUrl>http://www.eyecatch.no/favicon.ico</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Usage logger for ASP.NET WebAPI using Ninject.Extensions.Logging.
      Logs all requests to your API and records the following attributes:
        * Method
        * Request Uri
        * Originating IP
        * Content-Type
        * Content-Length
        * Encoding
        * Charset
        * Language
        * Body (can be truncated)
    </description>
    <releaseNotes>
      Updated to work with WebAPI RTM.
    </releaseNotes>
    <copyright>Copyright EyeCatch 2012</copyright>
    <tags>webapi ninject usage log logger</tags>
    <dependencies>
      <group targetFramework="net45">
        <dependency id="Microsoft.AspNet.WebApi" version="4.0.20710.0"/>
        <dependency id="Ninject.Extensions.Logging" version="3.0.1.0"/>
		<dependency id="Ninject.Web.WebApi-RC" version="3.0.0.3"/>
        <dependency id="WebActivator" version="1.5.1"/>
      </group>
    </dependencies>
  </metadata>
  <files>
    <file src="lib\**" target="lib" />
    <file src="tools\**" target="tools" />
    <file src="content\**" target="content" />
  </files>
</package>